<mvc:View controllerName="com.teachersdatabase.teachersdatabase.controller.App"
    xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <App >
        <Page id="page" title="{i18n>title}">
            <headerContent>
                <Select change="onViewChange">
                    <core:Item key="T" text="Teachers View" />
                    <core:Item key="S" text="Subjects View" />
                    <core:Item key="B" text="Batches View" />
                </Select>
                <Button icon="sap-icon://synchronize" press="onAppRefresh"></Button>
            </headerContent>
            <content>
                <NavContainer id="idNavContainer"/>
            </content>
        </Page>
    </App>
</mvc:View>